<% layout('/layout/boilerplate') %>
    <div class="row">
        <div class="text-left">
       
            <a class="btn btn-secondary rounded-circle " href="/campgrounds"> < </a>
           </div>
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <div class="card shadow">
                <div class="card-body">
                    
                    <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" for="title">Title</label>
                            <input class="form-control" type="text" id="title" name="campground[title]" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="location">Location</label>
                            <input class="form-control" type="text" id="location" name="campground[location]" required>
                        </div>
                        <label class="form-label" for="image">Image</label> 
                        <input class="form-control form-file-input" type="file"  id="image" name="image" multiple>
                        
                        <div class="mb-3">
                            <label class="form-label" for="price">Campground Price</label>
                            <div class="input-group">
                                <span class="input-group-text" id="price-label">Â£</span>
                                <input type="number" name="campground[price]" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="description">Description</label>
                            <textarea class="form-control" type="text" id="description" name="campground[description]" required></textarea>
                        </div>
                        <div class="mb-3 text-center"><button class="btn btn-success">Add Campground</button></div>
                        
                    </form>
                </div>
             </div>
        </div>
    </div>

